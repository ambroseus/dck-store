{
  "name": "@ambroseus/dck-store",
  "version": "1.3.0",
  "description": "Redux-based framework to get rid of CRUD-related boilerplate",
  "repository": "https://github.com/ambroseus/dck-store",
  "keywords": [
    "typescript",
    "redux",
    "tsdx",
    "redux-saga",
    "immer",
    "crud",
    "toolkit",
    "ducks-pattern"
  ],
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/dck-store.esm.js",
  "module": "dist/dck-store.esm.js",
  "types": "dist/index.d.ts",
  "author": "Eugene Samonenko <esamonenko@agilevision.io>",
  "license": "MIT",
  "devDependencies": {
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.4.4",
    "@babel/plugin-proposal-optional-chaining": "^7.6.0",
    "@types/jest": "^24.0.23",
    "@types/node": "^12.12.1",
    "eslint-config-react-app": "^5.0.2",
    "prettier": "^1.19.1",
    "react": "^16.12.0",
    "tsdx": "^0.11.0",
    "tslib": "^1.10.0",
    "typescript": "^3.7.2"
  },
  "scripts": {
    "build": "tsdx build --format esm --name dck-store",
    "format": "prettier --write \"src/*.ts\" \"src/**/*.ts\" \"**/*.md\"",
    "format:check": "prettier --list-different \"src/*.ts\" \"src/**/*.ts\" \"**/*.md\"",
    "lint": "tsdx lint src",
    "postinstall": "npm run lint && npm run format:check && npm test && npm run build",
    "test": "tsdx test",
    "test:coverage": "tsdx test --coverage"
  },
  "files": [
    "dist/*.js",
    "dist/*.js.map",
    "dist/index.d.ts",
    "src"
  ],
  "dependencies": {
    "@reduxjs/toolkit": "^1.0.4"
  },
  "sideEffects": false,
  "jest": {
    "globals": {
      "ts-jest": {
        "diagnostics": {
          "ignoreCodes": [
            6133
          ]
        }
      }
    }
  }
}
